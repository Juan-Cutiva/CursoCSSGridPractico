<style>
	#parent {
		display: grid;
		grid-template-columns: 1fr;
		grid-template-rows: 3fr repeat(3, 1fr);
		grid-column-gap: 0px;
		grid-row-gap: 0px;
	}

	#div1 {
		grid-area: 1 / 1 / 2 / 2;
	}
	#div2 {
		grid-area: 2 / 1 / 3 / 2;
	}
	#div3 {
		grid-area: 3 / 1 / 4 / 2;
	}
	#div4 {
		grid-area: 4 / 1 / 5 / 2;
	}
</style>

