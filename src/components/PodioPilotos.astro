---
import data from '../data/data.json';
const drivers = Object.values(data);
const Max = drivers[0];
const Lan = drivers[1];
const Lec = drivers[2];

---

<div class="item flex justify-center">
	<section
		class={`bottom-20 mt-8 flex 
        sm:h-[26.41rem]   sm:hover:h-[27.5rem]
        w-[90vw] md:w-[30vw] 
        flex-col rounded-xl rounded-ee-none rounded-ss-none border-r-2 border-t-2 pt-4 duration-150  hover:pt-[2rem] sm:hover:bottom-[3.9rem] sm:hover:mt-[-1.1rem] hover:border-[#ff8000]`}
	>
		<div id="parent" class="flex items-center text-center tracking-[0.0125rem] text-gray-100 text-xl">
            <p class="-rotate-90 absolute ml-[-2rem] sm:ml-[-1rem] font-black tracking-[0.0125rem] text-gray-100 text-xl md:hidden lg:block">{Lan.team_name}</p>
			<div id="div1" class="flex items-center justify-center"><img class="h-[13rem] ml-3" src={Lan.headshot_url} alt={Lan.full_name}></div>
			<div id="div2"><p class="font-bold">PTS {Lan.points}</p></div>
			<div id="div3"><p>{Lan.first_name}</p> <p class="font-bold">{Lan.last_name}</p></div>
			<div id="div4" class="flex flex-col items-center justify-center"><p class="font-bold text-2xl text-[#848482]">{Lan.position}</p> <div class={`h-1 w-9 bg-[#ff8000]`}></div></div>
		</div>
	</section>
</div>

